<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <edu.cmu.pocketsphinx.demo.Tutorial3View
        android:id="@+id/tutorial3_activity_java_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.88" />

    <TextView
        android:id="@+id/main_rect_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/caption_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="sans"
        android:visibility="gone" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView_IV"
        android:src="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/face_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/normal0001"
        android:minHeight="1280dp"
        android:minWidth="800dp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="0.8"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ToggleButton
            android:id="@+id/main_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textOff="Front"
            android:textOn="Front" />

        <ToggleButton
            android:id="@+id/main_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train" 
            android:textOn="Training"
            android:textOff="Train"/>

        <EditText
            android:id="@+id/main_name"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:ems="10"
            android:inputType="textPersonName" />

        <ToggleButton
            android:id="@+id/main_grab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GRAB" 
            android:textOff="ADD"/>

        <ToggleButton
            android:id="@+id/main_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:textOff="RUN" 
            android:textOn="Running"/>
    </LinearLayout>

    <TextView
        android:id="@+id/main_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|right"
        android:text="HERE I AM"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:visibility="visible" />

</RelativeLayout>